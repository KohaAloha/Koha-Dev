            $("#CheckAll").click(function(){
                $(".checkboxed").checkCheckboxes();
                enableCheckboxActions();
                return false;
            });
            $("#CheckNone").click(function(){
                $(".checkboxed").unCheckCheckboxes();
                enableCheckboxActions();
                return false;
            });
            $(".cb").click(function(){
              enableCheckboxActions();
            });
            $("#removeitems").html("<a href=\"#\" class=\"removeitems tag_hides disabled\">"+_("Supprimer")+"</a>")
            .click(function(){
              $("#myform").submit();
