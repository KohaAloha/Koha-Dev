 [% INCLUDE 'doc-head-open.inc' %] <title>Koha &rsaquo; Outils &rsaquo; Créateur de cartes adhérent &rsaquo; Modèles</title>
 [% INCLUDE 'doc-head-close.inc' %] <script type="text/javascript">
        //<![CDATA[
        $(document).ready(function(){
        var selectedUnit = $("#units option:selected").attr("value");
        var unitfields = $("#page_height,#page_width,#card_width,#card_height,#top_margin,#left_margin,#col_gap,#row_gap");
        $(unitfields).after("<span class=\"unit\">"+getUnit(selectedUnit)+"</span>");
        $("#units").change(function(){
            $(".unit").html(getUnit($(this).val()));
        });
        function getUnit(unit){
            switch(unit){
                case "POINT":
                    var unit = " pt";
                    break;
                case "AGATE":
                    var unit = " ag";
                    break;
                case "INCH":
                    var unit = " in";
                    break;
                case "MM":
                    var unit = " mm";
                    break;
                case "CM":
                    var unit = " cm";
                    break;
                default:
                    var unit = "";
            }
            return unit;
        }
        });
        //]]>
    </script>
</head>
<body id="pcard_edit-template" class="tools pcard">
 [% INCLUDE 'header.inc' %] [% INCLUDE 'cat-search.inc' %] <div id="breadcrumbs">
 <a href="/cgi-bin/koha/mainpage.pl">Accueil</a> &rsaquo; <a href="/cgi-bin/koha/tools/tools-home.pl">Outils</a> &rsaquo; <a href="/cgi-bin/koha/patroncards/home.pl">Créateur de cartes adhérent</a> &rsaquo; <a href="/cgi-bin/koha/patroncards/manage.pl?card_element=template">Modèles de carte d'adhérent</a> &rsaquo; Modifier le modèle de carte adhérent </div>
 <div id="doc3" class="yui-t2">
 <div id="bd">
 <div id="yui-main">
 <div class="yui-b">
 <form name="input" action="/cgi-bin/koha/patroncards/edit-template.pl" method="get">
 <div class="yui-g">
 <h3>Modifier le modèle de carte adhérent</h3>
 <div class="yui-u first">
 <fieldset class="rows">
 <ol>
 <li>
 <span class="label">Identifiant du modèle :</span>[% IF ( template_id ) %][% template_id %][% ELSE %]N/D[% END %] </li>
 <li>
 <label for="template_code">Code du template&nbsp;:</label>
 <input type="text" size="30" maxlength="43" name="template_code" id="template_code" value="[% template_code %]" />
 </li>
 <li>
 <label for="template_desc">Description du modèle&nbsp;:</label>
 <textarea cols="30" rows="3" id="template_desc" name="template_desc">[% template_desc %]</textarea>
 </li>
 <li>
 <label for="units">Unités&nbsp;: </label>
 <select id="units" name="units">
 [% FOREACH unit IN units %] [% IF ( unit.selected ) %] <option value="[% unit.type %]" selected="selected">
 [% ELSE %] <option value="[% unit.type %]">
 [% END %] [% unit.desc %] </option>
 [% END %] </select>
 </li>
 <li>
 <label for="page_height">Hauteur de page&nbsp;:</label>
 <input type="text" size="4" name="page_height" id="page_height" value="[% page_height %]" />
 </li>
 <li>
 <label for="page_width">Largeur de page&nbsp;:</label>
 <input type="text" size="4" name="page_width" id="page_width" value="[% page_width %]" />
 </li>
 <li>
 <label for="card_width">Largeur de la carte&nbsp;: </label>
 <input type="text" size="4" name="card_width" id="card_width" value="[% card_width %]" />
 </li>
 <li>
 <label for="card_height">Hauteur de la carte&nbsp;: </label>
 <input type="text" size="4" name="card_height" id="card_height" value="[% card_height %]" />
 </li>

 </ol>
 </fieldset>
 </div>
 <div class="yui-u">
 <fieldset class="rows">
 <ol><li>
 <label for="top_margin">Marge de haut de page:</label>
 <input type="text" size="4" name="top_margin" id="top_margin" value="[% top_margin %]" />
 </li>
 <li>
 <label for="left_margin">Left page margin:</label>
 <input type="text" size="4" name="left_margin" id="left_margin" value="[% left_margin %]" />
 </li>
 <li>
 <label for="cols">Nombre de colonnes&nbsp;:</label>
 <input type="text" size="4" name="cols" id="cols" value="[% cols %]" />
 </li>
 <li>
 <label for="rows">Nombre de lignes&nbsp;: </label>
 <input type="text" size="4" name="rows" id="rows" value="[% rows %]" />
 </li>
 <li>
 <label for="col_gap">Espace entre les colonnes&nbsp;: </label>
 <input type="text" size="4" name="col_gap" id="col_gap" value="[% col_gap %]" />
 </li>
 <li>
 <label for="row_gap">Espace entre les lignes&nbsp;: </label>
 <input type="text" size="4" name="row_gap" id="row_gap" value="[% row_gap %]" />
 </li>

 <li>
 <label for="profile_id">Profil&nbsp;:</label>
 [% IF ( profile_list ) %] <select id="profile_id" name="profile_id">
 [% FOREACH profile_lis IN profile_list %] [% IF ( profile_lis.selected ) %] <option value="[% profile_lis.profile_id %]" selected="selected">
 [% ELSE %] <option value="[% profile_lis.profile_id %]">
 [% END %] [% profile_lis.printer_name %]/[% profile_lis.paper_bin %] </option>
 [% END %] </select>
 [% ELSE %] <a href="/cgi-bin/koha/patroncards/edit-profile.pl?op=new">Créer un nouveau profil d'imprimante</a>
 [% END %] </li>
 </ol>
 </fieldset>
 </div>
 </div>
 <div class="yui-g">
 <fieldset class="action">
 <input value="Enregistrer" type="submit" class="submit" />
 <a class="cancel" href="/cgi-bin/koha/patroncards/manage.pl?card_element=template">Annuler</a>
 <input type="hidden" name="op" value="save" />
 [% IF ( template_id ) %] <input type="hidden" name="template_id" value="[% template_id %]" />
 [% END %] </fieldset>
 </div>
 </form>
 </div>
 </div>
 <div class="yui-b">
 [% INCLUDE 'patroncards-menu.inc' %] </div>
 </div>
 [% INCLUDE 'intranet-bottom.inc' %] 