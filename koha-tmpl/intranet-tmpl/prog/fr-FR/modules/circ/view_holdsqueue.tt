 [% ELSE %]
 <option value="[% itemtypeloo.value %]">[% itemtypeloo.description %]</option>
 [% END %]
 [% END %]
 </select></li>
 -->
 </ol></fieldset>
 <fieldset class="action"> <input value="Valider" type="submit" />
 <input type="hidden" name="run_report" value="1" /></fieldset>
</form>
